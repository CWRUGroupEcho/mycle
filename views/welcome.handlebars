
    {{#each Locations}}
    
    <div class="row info">
        <div class="col-sm-8">
            <div class="card">
              <div class="card-title">
                <h2 class="location"><a href="/api/locations/{{id}}">{{locationName}}</a></h2>
              </div>
                <div class="card-body">
                  <p class="card-text">{{description}}</p>
                  <button class="like" data-id="{{id}}" data-likes="{{likes}}" ><i class="fas fa-thumbs-up"></i></button>
                  <a href="/api/locations/{{id}}" data-id="{{id}}" class="btn btn-info review" style="float:right" role="button">Review!</a>
                </div>
              </div>
        </div>
        <div class="col-sm-4">
          <img class="image" src="/{{picture_url}}" alt="404 Picture Not Found">
        </div>
      </div>


  {{/each}}