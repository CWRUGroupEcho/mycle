   <head>
      <link rel="stylesheet" href="../css/style.css" type="text/css" />
    </head>
<div class="row info">
        <div class="col-sm-8">
            <div class="card">
              <div class="card-title">
                <h2 class="location"><a href="/api/locations/{{id}}">{{locationName}}</a></h2>
              </div>
                <div class="card-body">
                  <p class="card-text">{{description}}</p>
                  <button class="like" data-id="{{id}}"><i class="fas fa-thumbs-up"></i></button>
                </div>
              </div>
        </div>
        <div class="col-sm-4">
          <img class="image" src="/{{picture_url}}">
        </div>
</div>

<form action="/api/submitReview/{{id}}" method="post">
Name: <input type="text" name="name"><br>
Review: <textarea class="reviewBody" name="body" rows="4" cols="50"> 
</textarea><br>
<input type="submit">
</form>

{{#each this.Reviews}}

<div class="row info">
        <div class="col-sm-8">
            <div class="card">
              <div class="card-title">
                <h2 class="review">{{username}}</h2>
              </div>
                <div class="card-body">
                  <p class="card-text">{{body}}</p>
                  <div class="card-footer">{{createdAt}}</div>
                </div>
              </div>
        </div>

</div>

{{/each}}